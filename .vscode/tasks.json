{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build project",
            "command": "C:\\MinGW\\bin\\gcc.EXE",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "${workspaceFolder}/*.c",
                "-o",
                "${workspaceFolder}\\output\\biblioteca.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compila todos os arquivos .c do projeto."
        }
    ],
    "version": "2.0.0"
}